<div class="container-fluid">
  <h2 class="text-center">Menu Rápido</h2>
  <hr>
  <div class="row">
    <div class="col-md-3">
      <div class="card bg-primary">
        <div class="card-body text-white text-center">
          <h5 class="card-title">Cadastrar novo produto</h5>
          <hr>
          <p class="card-text"><i class="fas fa-box-open fa-7x"></i></p>
          <%= link_to 'Acessar', new_dashboard_product_path, class:"btn btn-success" %>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card bg-primary">
        <div class="card-body text-white text-center">
          <h5 class="card-title">Cadastrar novo grupo</h5>
          <hr>
          <p class="card-text"><i class="fas fa-boxes fa-7x"></i></p>
          <%= link_to 'Acessar', new_dashboard_group_path, class:"btn btn-success" %>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card bg-primary">
        <div class="card-body text-white text-center">
          <h5 class="card-title">Cadastrar nova familia</h5>
          <hr>
          <p class="card-text"><i class="fas fa-box-tissue fa-7x"></i></p>
          <%= link_to 'Acessar', new_dashboard_family_path, class:"btn btn-success" %>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card bg-primary">
        <div class="card-body text-white text-center">
          <h5 class="card-title">Cadastrar classificação</h5>
          <hr>
          <p class="card-text"><i class="fas fa-barcode fa-7x"></i></p>
          <%= link_to 'Acessar', new_dashboard_tax_classification_path, class:"btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-4">
      <div class="card bg-success">
        <div class="card-body text-white text-center">
          <h5 class="card-title">Produtos cadastrados</h5>
          <hr>
          <p class="card-text count_number"><%= @total_products %> </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card bg-success">
        <div class="card-body text-white text-center">
          <h5 class="card-title">Produtos Lançamentos</h5>
          <hr>
          <p class="card-text count_number"><%= @products_releases %> </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card bg-success">
        <div class="card-body text-white text-center">
          <h5 class="card-title">Produtos ativos</h5>
          <hr>
          <p class="card-text count_number"><%= @products_status %> </p>
        </div>
      </div>
    </div>
  </div>
</div>
