<div class="container-fluid">
  <h1 class="h3 mb-4 text-gray-800">Grupos de produtos</h1>
  <%= link_to 'Cadastrar', new_dashboard_group_path, class:"btn btn-success mb-2" %>
  <% if @groups.empty? %>
    <div class="alert alert-danger" role="alert">
      Nenhum grupo cadastrado!
    </div>
  <% else %>
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Código Grupo</th>
            <th scope="col">Descrição Grupo</th>
            <th scope="col">Alterar</th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |group| %>
            <tr>
              <th scope="row"><%= group.id %></th>
              <td><%= group.group_code %></td>
              <td><%= group.group_description %></td>
              <td><%= link_to 'Editar', edit_dashboard_group_path(group), class:"btn btn-secondary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
  <%= paginate @groups %>
</div>
